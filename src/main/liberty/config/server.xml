<?xml version="1.0" encoding="UTF-8"?>
<server>
  <!-- Enable features -->
  <featureManager>
    <feature>microProfile-6.0</feature>
  </featureManager>

  <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
  <httpEndpoint 
    id="defaultHttpEndpoint" 
    host="*" 
    httpPort="${DEFAULT_HTTP_PORT}" 
    httpsPort="${DEFAULT_HTTPS_PORT}">
    <accessLogging 
      enabled="false" 
      filepath="${server.output.dir}/logs/http_defaultEndpoint_access.log" 
      logFormat='%h %u %t "%r" %s %b %D %{User-agent}'>
    </accessLogging>
  </httpEndpoint>
  
  <monitor filter="REST"/>
  <mpMetrics authentication="false"/>

  <quickStartSecurity userName="${env.USERNAME}" userPassword="${env.PASSWORD}" />

  <webApplication name="acmeair-authservice" location="acmeair-authservice-java-6.1.war" contextRoot="/">
    <!-- enable visibility to third party apis -->
    <classloader apiTypeVisibility="api,ibm-api,spec,stable,third-party" />
  </webApplication>

  <keyStore id="defaultKeyStore" password="secret" />

  <cors 
    domain="/" 
    allowedOrigins="*" 
    allowedMethods="GET, DELETE, POST, OPTIONS" 
    allowedHeaders="*" 
    allowCredentials="true" 
    maxAge="3600" />
</server>
